<%-include('../Header.ejs')%>
<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Page Title</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' media='screen' href='main.css'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="container-fluid">
        <div class="container">
            <div class="row" style="margin-top:100px">
                <div class="col-md-6">
                    <a class="navbar-brand" href="#">
                        <img src="/images/login.jpg" class="img-fluid" width="500px; height:300px"/>
                      </a>
                </div>
                <div class="col-md-6">
                <center><h2>Sign Up</h2></center>

                <% if(message.length>0){ %>
                    <div class="alert alert-danger">
                        <%- message %>
                    </div>
                     <% }%>                
                <form  action="/admin/registerinsert" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <label>Name:</label>
                    <input type="text" placeholder="Enter your name*" class="form-control" name="name1"/>
                </div>
                <div class="mb-3">
                    <label>Email:</label>
                    <input type="email" placeholder="Enter your Email*" class="form-control" name="email"/>
                </div>
                <div class="mb-3">
                    <label>Password</label>
                    <input type="password" placeholder="Enter your password*" class="form-control" name="password"/>
                </div>
                <div class="mb-3">
                    <label>Conform Password</label>
                    <input type="password" placeholder="Enter your Confirmpassword*" class="form-control" name="cpassword"/>
                </div>

                <div class="mb-3">
                   <button class="btn btn-primary">Register</button>
                </div>
                </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>