<%-include('../Header.ejs')%>
<!--Style CSS-->
<link rel="stylesheet" href="/css/style1.css">

<!-- banner start -->
<section class="banner">
    <div class="banner-box">
        <div class="intro-text">
            <div class="intro-textbox">
                <h1>Share Your Own Thoughts</h1>
            </div>
        </div>
        <img src="images/bannerblog.jpg" alt="banner">
    </div>
    </section>
<!-- banner end -->
<section class="featured-blog mtb-40">
        <div class="container">
            
            <div class="row">
                
                <% b.forEach((item)=>{%>
                <div class="col-md-4">
                    <div class="blog-box">
                        <img src="images/banner1.jpg " alt="blog1" style="width: 300px;height:200px;border-radius:10px;">
                        <h3 class="text-dark"><%=item.name%></h3>
                        <p class="text-center mt-2"><%=item.createdAt %></p>
                    <p class="text-center"><%=item.description.slice(0,90)%>..</p>
                         
                       
                    
                    
                        <a href="/blogDetail/<%=item._id%>" class="btn btn-danger">Read more...</a>
                    </div>
                </div>
                
                
              
                
               
                
                <% })%>
               
                
            </div>
            
        </div>
    </section>
<%-include('../footer.ejs')%>